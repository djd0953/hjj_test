{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with Nodemon",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--exec",
                "ts-node",
                "-r",
                "tsconfig-paths/register",
                "src/app.ts"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}

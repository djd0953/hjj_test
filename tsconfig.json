{
    "compilerOptions": {
        "target": "es2020",                          
        "module": "commonjs",                        
        "lib": ["ES2020", "DOM"],                    
        "moduleResolution": "node",                  
        "esModuleInterop": true,                     
        "resolveJsonModule": true,                   
        "strict": true,                              
        "noImplicitAny": true,                       
        "skipLibCheck": true,                        
        "forceConsistentCasingInFileNames": true,    
        "outDir": "./dist",                          
        "rootDir": "./src",                          
        "types": ["node"],                           
        "allowSyntheticDefaultImports": true,        
        "allowJs": true,                             
        "checkJs": false                             
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}